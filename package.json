{
  "name": "zachtools",
  "displayName": "ZachTools",
  "description": "",
  "publisher": "EasierTeaching",
  "version": "0.8.0",
  "engines": {
    "vscode": "^1.71.0"
  },
  "repository": {
    "url": "https://github.com/zachtsch/zachtools.git"
  },
  "license": "license.txt",
  "categories": [
    "Other",
    "Snippets",
    "Keymaps",
    "Extension Packs",
    "Education"
  ],
  "activationEvents": [
    "onCommand:zachtools.installMinGW",
    "onCommand:zachtools.installFont",
    "onCommand:zachtools.newJava",
    "onCommand:zachtools.newDoug",
    "onTerminalProfile:zachtools.MSYS2"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "terminal": {
      "profiles": [
        {
          "title": "MSYS2",
          "id": "zachtools.MSYS2"
        }
      ]
      
    },
    "taskDefinitions": [
      {
        "type": "BuildAndRunFile",
        "required": [
          "cpp"
        ],
        "properties": {
          "task": {
            "label": "C/C++: gcc-11 build active file",
            "command": "C:\\msys64\\usr\\bin\\gcc.exe",
            "args": [
              "-fdiagnostics-color=always",
              "-std=c++20",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
              "cwd": "${fileDirname}"
            },
            "problemMatcher": [
              "$gcc"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            }
          }
        }
      }
    ],
    "keybindings": [
      {
        "key": "alt+up",
        "command": "workbench.action.terminal.scrollUp",
        "when": "terminalIsOpen && terminalFocus"
      },
      {
        "key": "alt+down",
        "command": "workbench.action.terminal.scrollDown",
        "when": "terminalIsOpen && terminalFocus"
      },
      {
        "key": "ctrl+f",
        "command": "editor.action.startFindReplaceAction",
        "when": "findWidgetVisible",
        "mac": "cmd+f"
      },
      {
        "key": "ctrl+g",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && editorHasHoverProvider && !editorReadonly && !editorHoverVisible",
        "mac": "cmd+g"
      },
      {
        "key": "ctrl+h",
        "command": "editor.action.quickFix",
        "when": "editorHasCodeActionsProvider",
        "mac": "cmd+h"
      },
      {
        "key": "ctrl+`",
        "command": "workbench.action.terminal.focus",
        "mac": "ctrl+`"
      },
      {
        "key": "ctrl+`",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalIsOpen && terminalFocus",
        "mac": "cmd+`"
      },
      {
        "key": "ctrl+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalIsOpen && terminalFocus",
        "mac": "cmd+w"
      },
      {
        "key": "ctrl+shift+c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly",
        "mac": "cmd+shift+c"
      },
      {
        "key": "ctrl+shift+r",
        "command": "editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly",
        "mac": "cmd+shift+r"
      },
      {
        "key": "ctrl+k ctrl+a",
        "command": "java.debug.runJavaFile",
        "when": "resourceExtname == .java",
        "mac": "cmd+k cmd+a"
      },
      {
        "key": "ctrl+k ctrl+a",
        "command": "C_Cpp.BuildAndRunFile",
        "when": "resourceExtname == .cpp",
        "mac": "cmd+k cmd+a"
      },
      {
        "key": "ctrl+k ctrl+a",
        "command": "python.execInTerminal",
        "when": "resourceExtname == .py",
        "mac": "cmd+k ctrl+a"
      },
      {
        "key": "ctrl+h",
        "command": "-editor.action.startFindReplaceAction",
        "when": "editorFocus || editorIsOpen",
        "mac": "cmd+h"
      },
      {
        "key": "ctrl+g",
        "command": "-workbench.action.gotoLine",
        "mac": "cmd+g"
      },
      {
        "key": "ctrl+shift+c",
        "command": "-workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus",
        "mac": "cmd+shift+c"
      }
    ],
    "commands": [
      {
        "command": "zachtools.installMinGW",
        "title": "Install MinGW"
      },
      {
        "command": "zachtools.installFont",
        "title": "Install Font"
      },
      {
        "command": "zachtools.newJava",
        "title": "Zach's Create New Java File"
      },
      {
        "command": "zachtools.newDoug",
        "title": "Doug: Create New Java File"
      }
    ],
    "snippets": [
      {
        "language": "java",
        "path": "./javasnip.json"
      },
      {
        "path": "./git.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/node-fetch": "2.6.2",
    "@types/unzip-stream": "0.3.1",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.10",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "all": "^0.0.0",
    "node": "^16",
    "fs-extra": "^10.1.0",
    "node-fetch": "^2.6.2",
    "node-stream-zip": "^1.15.0",
    "unzip-stream": "^0.3.1"
  }
}
